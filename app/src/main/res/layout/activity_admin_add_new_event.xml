<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewEvent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/addphotohere"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_product_image"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Event Title"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />


        <EditText
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_title"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Description"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />


        <EditText
            android:id="@+id/event_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_description"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Price"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_price"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Location"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_location"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Locations Latitude"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_latitude"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Locations Longitude"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_longitude"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Address"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_address"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Date"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_date"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:hint="Event Time"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />


        <Button
            android:id="@+id/add_new_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time"
            android:text="Add Event"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons"
            />

    </RelativeLayout>

</ScrollView>